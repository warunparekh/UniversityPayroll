@model List<UniversityPayroll.ViewModels.LeaveApplicationViewModel>
@{
    ViewData["Title"] = User.IsInRole("Admin") ? "Leave Management" : "My Leave Applications";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    @if (!User.IsInRole("Admin"))
    {
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Apply for Leave
            </a>
        </div>
    }
    else
    {
        <div>
            <span class="text-muted">
                <i class="bi bi-info-circle"></i>
                You can approve/reject applications until their start date.
            </span>
        </div>
    }

    @if (User.IsInRole("Admin"))
    {
        <div>
            <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i>
                Back to Dashboard
            </a>
        </div>
    }
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i>
        @if (User.IsInRole("Admin"))
        {
            <h5>No leave applications found</h5>
            <p>There are currently no leave applications from any employees.</p>
        }
        else
        {
            <h5>No leave applications yet</h5>
            <p>You have not applied for any leave yet. <a asp-action="Create" class="btn btn-link p-0">Apply for leave</a> to get started.</p>
        }
    </div>
}
else
{
    @if (User.IsInRole("Admin"))
    {
        <div class="row mb-3">
            <div class="col-md-4">
                <div class="card text-center border-warning">
                    <div class="card-body py-2">
                        <h6 class="card-title mb-1">Pending</h6>
                        <span class="badge bg-warning text-dark fs-6">@Model.Count(l => l.Status == "Pending")</span>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center border-success">
                    <div class="card-body py-2">
                        <h6 class="card-title mb-1">Approved</h6>
                        <span class="badge bg-success fs-6">@Model.Count(l => l.Status == "Approved")</span>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center border-danger">
                    <div class="card-body py-2">
                        <h6 class="card-title mb-1">Rejected</h6>
                        <span class="badge bg-danger fs-6">@Model.Count(l => l.Status == "Rejected")</span>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    @if (User.IsInRole("Admin"))
                    {
                        <th>Employee</th>
                    }
                    <th>Leave Type</th>
                    <th>Period</th>
                    <th>Days</th>
                    <th>Reason</th>
                    <th>Status</th>
                    <th>Comments</th>
                    @if (User.IsInRole("Admin"))
                    {
                        <th style="width: 35%;">Actions</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var leave in Model)
                {
                    <tr class="@(leave.Status == "Pending" ? "table-warning" : leave.Status == "Approved" ? "table-success" : "table-danger")">
                        @if (User.IsInRole("Admin"))
                        {
                            <td>
                                <strong>@leave.EmployeeName</strong><br>
                                <small class="text-muted">(@leave.EmployeeCode)</small>
                            </td>
                        }
                        <td>
                            <span class="badge bg-info">@leave.LeaveType</span>
                        </td>
                        <td>
                            <small>
                                @leave.StartDate.ToShortDateString()<br>
                                to @leave.EndDate.ToShortDateString()
                                @if (leave.StartDate <= DateTime.UtcNow.Date)
                                {
                                    <br>
                        
                                    <span class="badge bg-secondary">Started</span>
                                }
                            </small>
                        </td>
                        <td>
                            <span class="badge bg-secondary">@leave.TotalDays day@(leave.TotalDays != 1 ? "s" : "")</span>
                        </td>
                        <td>
                            @if (leave.Reason.Length > 50)
                            {
                                <span title="@leave.Reason">@(leave.Reason.Substring(0, 50))...</span>
                            }
                            else
                            {
                                @leave.Reason
                            }
                        </td>
                        <td>
                            <span class="badge @(leave.Status == "Approved" ? "bg-success" : leave.Status == "Rejected" ? "bg-danger" : "bg-warning text-dark")">
                                <i class="bi @(leave.Status == "Approved" ? "bi-check-circle" : leave.Status == "Rejected" ? "bi-x-circle" : "bi-clock")"></i>
                                @leave.Status
                            </span>
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(leave.AdminComments))
                            {
                                if (leave.AdminComments.Length > 30)
                                {
                                    <span title="@leave.AdminComments">@(leave.AdminComments.Substring(0, 30))...</span>
                                }
                                else
                                {
                                    @leave.AdminComments
                                }
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        @if (User.IsInRole("Admin"))
                        {
                            <td>
                                @if (leave.StartDate > DateTime.UtcNow.Date)
                                {
                                    <form method="post" class="d-flex gap-1 align-items-center">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@leave.LeaveId" />
                                        <input type="text" name="comment" class="form-control form-control-sm" placeholder="Comment" maxlength="200" />

                                        @if (leave.Status != "Approved")
                                        {
                                            <button type="submit" formaction="/Leave/Approve" class="btn btn-sm btn-success"
                                                    onclick="return confirm('Are you sure you want to approve this leave application?')"
                                                    title="Approve Application">
                                                <i class="bi bi-check-circle"></i>
                                            </button>
                                        }

                                        @if (leave.Status != "Rejected")
                                        {
                                            <button type="submit" formaction="/Leave/Reject" class="btn btn-sm btn-danger"
                                                    onclick="return validateReject(this)"
                                                    title="Reject Application">
                                                <i class="bi bi-x-circle"></i>
                                            </button>
                                        }
                                    </form>
                                }
                                else
                                {
                                    <div class="d-flex align-items-center">
                                        <span class="badge @(leave.Status == "Approved" ? "bg-success" : leave.Status == "Rejected" ? "bg-danger" : "bg-warning") me-2">
                                            @leave.Status
                                        </span>
                                        <small class="text-muted">Leave started</small>
                                    </div>
                                }
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@section Scripts {
    <script>
        function validateReject(btn) {
            const comment = btn.form.querySelector('input[name="comment"]').value.trim();
            if (!comment) {
                alert('A comment is required when rejecting a leave application.');
                return false;
            }
            return confirm('Are you sure you want to reject this leave application?\n\nReason: ' + comment);
        }
    </script>
}