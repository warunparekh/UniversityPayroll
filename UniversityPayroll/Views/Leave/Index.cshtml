@model List<UniversityPayroll.ViewModels.LeaveApplicationViewModel>
@{
    ViewData["Title"] = "Leave Applications";
}

<h2>Leave Applications</h2>

@if (!User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Apply for Leave</a>
    </p>
}

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            @if (User.IsInRole("Admin"))
            {
                <th>Employee</th>
            }
            <th>Leave Type</th>
            <th>From - To</th>
            <th>Days</th>
            <th>Reason</th>
            <th>Status</th>
            <th>Admin Comments</th>
            @if (User.IsInRole("Admin"))
            {
                <th style="width: 30%;">Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var leave in Model)
        {
            <tr>
                @if (User.IsInRole("Admin"))
                {
                    <td>@leave.EmployeeName (@leave.EmployeeCode)</td>
                }
                <td>@leave.LeaveType</td>
                <td>@leave.StartDate.ToShortDateString() - @leave.EndDate.ToShortDateString()</td>
                <td>@leave.TotalDays</td>
                <td>@leave.Reason</td>
                <td>
                    <span class="badge @(leave.Status == "Approved" ? "bg-success" : leave.Status == "Rejected" ? "bg-danger" : "bg-warning text-dark")">
                        @leave.Status
                    </span>
                </td>
                <td>@leave.AdminComments</td>
                @if (User.IsInRole("Admin") && leave.Status == "Pending")
                {
                    <td>
                        <form method="post" class="d-flex gap-2">
                            <input type="hidden" name="id" value="@leave.LeaveId" />
                            <input type="text" name="comment" class="form-control form-control-sm" placeholder="Optional comment..." />
                            <button type="submit" formaction="/Leave/Approve" class="btn btn-sm btn-success flex-shrink-0">Approve</button>
                            <button type="submit" formaction="/Leave/Reject" class="btn btn-sm btn-danger flex-shrink-0">Reject</button>
                        </form>
                    </td>
                }
                else if (User.IsInRole("Admin"))
                {
                    <td>-</td>
                }
            </tr>
        }
    </tbody>
</table>