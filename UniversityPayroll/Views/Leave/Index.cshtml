@model IEnumerable<UniversityPayroll.Models.LeaveApplication>

<div class="container mt-5 animate__animated animate__fadeIn">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Leave Applications</h2>
        <a href="/Leave/Create" class="btn btn-primary animate__animated animate__bounceIn">Apply for Leave</a>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-hover shadow">
            <thead class="table-dark">
                <tr>
                    <th>Type</th>
                    <th>Start</th>
                    <th>End</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.LeaveType</td>
                        <td>@item.StartDate.ToShortDateString()</td>
                        <td>@item.EndDate.ToShortDateString()</td>
                        <td>
                            <span class="badge bg-info">@item.Status</span>
                        </td>
                        <td>
                            <a href="/Leave/Details/@item.Id" class="btn btn-sm btn-info">Details</a>
                            @if (User.IsInRole("Admin"))
                            {                               
                                <a href="/Leave/Delete/@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this leave application?');">Delete</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>