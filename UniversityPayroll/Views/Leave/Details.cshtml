@model UniversityPayroll.Models.LeaveApplication

<div class="container mt-5 animate__animated animate__fadeIn">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white text-center">
                    <h2>Leave Application Details</h2>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item"><b>Employee Id:</b> @Model.EmployeeId</li>
                        <li class="list-group-item"><b>Type:</b> @Model.LeaveType</li>
                        <li class="list-group-item"><b>Start:</b> @Model.StartDate.ToShortDateString()</li>
                        <li class="list-group-item"><b>End:</b> @Model.EndDate.ToShortDateString()</li>
                        <li class="list-group-item"><b>Total Days:</b> @Model.TotalDays</li>
                        <li class="list-group-item"><b>Status:</b> @Model.Status</li>
                        <li class="list-group-item"><b>Reason:</b> @Model.Reason</li>
                        <li class="list-group-item"><b>Comment:</b> @Model.Comment</li>
                    </ul>
                    <div class="d-flex justify-content-between">
                        @if (User.IsInRole("Admin"))
                        {
                            <form asp-action="Accept" asp-route-id="@Model.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-success">Accept</button>
                            </form>
                            <form asp-action="Reject" asp-route-id="@Model.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger">Reject</button>
                            </form>
                        }
                        <a href="/Leave" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>