@model UniversityPayroll.Models.LeaveApplication
@{
    ViewData["Title"] = "Apply Leave";
}

<h2>Apply for Leave</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="LeaveType" class="form-label">Leave Type</label>
        <select asp-for="LeaveType" class="form-select" required>
            @foreach (var type in (List<string>)ViewBag.LeaveTypes)
            {
                <option value="@type">@type</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="StartDate" class="form-label">Start Date</label>
        <input asp-for="StartDate" class="form-control" type="date" required />
    </div>
    <div class="mb-3">
        <label asp-for="EndDate" class="form-label">End Date</label>
        <input asp-for="EndDate" class="form-control" type="date" required />
    </div>
    <div class="mb-3">
        <label asp-for="TotalDays" class="form-label">Total Days</label>
        <input asp-for="TotalDays" class="form-control" type="number" required />
    </div>
    <div class="mb-3">
        <label asp-for="Reason" class="form-label">Reason</label>
        <textarea asp-for="Reason" class="form-control" rows="3" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
