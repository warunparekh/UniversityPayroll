@model UniversityPayroll.Models.LeaveApplication

<h2>Apply for Leave</h2>

<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div>
        <label asp-for="EmployeeId"></label>
        <input asp-for="EmployeeId" />
    </div>
    <div>
        <label asp-for="LeaveType"></label>
        <input asp-for="LeaveType" />
    </div>
    <div>
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" />
    </div>
    <div>
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" />
    </div>
    <div>
        <label asp-for="TotalDays"></label>
        <input asp-for="TotalDays" type="number" />
    </div>
    <div>
        <label asp-for="Reason"></label>
        <input asp-for="Reason" />
    </div>
    <div>
        <button type="submit">Submit</button>
        <a href="/Leave">Back to List</a>
    </div>
</form>
