@model UniversityPayroll.Models.LeaveApplication

<div class="container mt-5 animate__animated animate__fadeIn">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h2>Apply for Leave</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="alert alert-danger"></div>
                        <div class="mb-3">
                            <label asp-for="EmployeeId" class="form-label"></label>
                            <input asp-for="EmployeeId" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="LeaveType" class="form-label"></label>
                            <input asp-for="LeaveType" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="StartDate" class="form-label"></label>
                            <input asp-for="StartDate" type="date" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="EndDate" class="form-label"></label>
                            <input asp-for="EndDate" type="date" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="TotalDays" class="form-label"></label>
                            <input asp-for="TotalDays" type="number" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Reason" class="form-label"></label>
                            <input asp-for="Reason" class="form-control" />
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success animate__animated animate__pulse">Submit</button>
                            <a href="/Leave" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>