@model UniversityPayroll.Models.Employee

<h2>Employee Details</h2>
<p><b>Code:</b> @Model.EmployeeCode</p>
<p><b>Name:</b> @Model.FirstName @Model.LastName</p>
<p><b>Department:</b> @Model.Department</p>
<p><b>Date of Joining:</b> @Model.DateOfJoining.ToShortDateString()</p>
<p><b>Basic Pay:</b> @Model.BasicPay</p>
<p><b>HRA %:</b> @Model.HraPercent</p>
<p><b>DA %:</b> @Model.DaPercent</p>
<p><b>Bank IFSC:</b> @Model.BankAccount?.IFSC</p>
<p><b>Bank Account Number:</b> @Model.BankAccount?.AccountNumber</p>
<p><b>Status:</b> @Model.Status</p>
<p>
    <a href="/Employee/Edit/@Model.Id">Edit</a> |
    <a href="/Employee/Delete/@Model.Id" onclick="return confirm('Are you sure you want to delete this employee?');">Delete</a> |
    <a href="/Employee">Back to List</a>
</p>
