@model UniversityPayroll.Models.Employee

<div class="container mt-5 animate__animated animate__fadeIn">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white text-center">
                    <h2>Employee Details</h2>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item"><b>Code:</b> @Model.EmployeeCode</li>
                        <li class="list-group-item"><b>Name:</b> @Model.FirstName @Model.LastName</li>
                        <li class="list-group-item"><b>Department:</b> @Model.Department</li>
                        <li class="list-group-item"><b>Date of Joining:</b> @Model.DateOfJoining.ToShortDateString()</li>
                        <li class="list-group-item"><b>Basic Pay:</b> @Model.BasicPay</li>
                        <li class="list-group-item"><b>HRA %:</b> @Model.HraPercent</li>
                        <li class="list-group-item"><b>DA %:</b> @Model.DaPercent</li>
                        <li class="list-group-item"><b>Bank IFSC:</b> @Model.BankAccount?.IFSC</li>
                        <li class="list-group-item"><b>Bank Account Number:</b> @Model.BankAccount?.AccountNumber</li>
                        <li class="list-group-item"><b>Status:</b> @Model.Status</li>
                    </ul>
                    <div class="d-flex justify-content-between">
                        <a href="/Employee/Edit/@Model.Id" class="btn btn-warning">Edit</a>
                        <a href="/Employee/Delete/@Model.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this employee?');">Delete</a>
                        <a href="/Employee" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>