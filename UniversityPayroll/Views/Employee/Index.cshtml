@model IEnumerable<UniversityPayroll.Models.ViewModels.EmployeeRowViewModel>

<div class="container mt-5 animate__animated animate__fadeIn">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Employees</h2>
        <a href="/Employee/Create" class="btn btn-primary animate__animated animate__bounceIn">Create New</a>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-hover shadow">
            <thead class="table-dark">
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Department</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Employee.EmployeeCode</td>
                        <td>@item.Employee.FirstName @item.Employee.LastName</td>
                        <td>@item.Employee.Department</td>
                        <td>@item.Email</td>
                        <td>@item.Roles</td>
                        <td>
                            <a href="/Employee/Details/@item.Employee.Id" class="btn btn-sm btn-info">Details</a>
                            <a href="/Employee/Edit/@item.Employee.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a href="/Employee/Delete/@item.Employee.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this employee?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>