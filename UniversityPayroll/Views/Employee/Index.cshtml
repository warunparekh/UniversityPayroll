@model IEnumerable<UniversityPayroll.Models.ViewModels.EmployeeRowViewModel>

<h2>Employees</h2>
<p><a href="/Employee/Create">Create New</a></p>

<table border="1">
    <tr>
        <th>Code</th>
        <th>Name</th>
        <th>Department</th>
        <th>Email</th>
        <th>Roles</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
                <td>@item.Employee.EmployeeCode</td>
                <td>@item.Employee.FirstName @item.Employee.LastName</td>
                <td>@item.Employee.Department</td>
                <td>@item.Email</td>
                <td>@item.Roles</td>
            <td>
                    <a href="/Employee/Details/@item.Employee.Id">Details</a> |
                    <a href="/Employee/Edit/@item.Employee.Id">Edit</a> |
                    <a href="/Employee/Delete/@item.Employee.Id" onclick="return confirm('Are you sure you want to delete this employee?');">Delete</a>
            </td>
        </tr>
    }
</table>
