@model List<UniversityPayroll.Models.Employee>
@{
    ViewData["Title"] = "Employees";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Employees</h2>
    <a asp-action="Create" class="btn btn-primary">Add New Employee</a>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Designation</th>
                <th>Base Salary</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.EmployeeCode</td>
                    <td>@employee.Name</td>
                    <td>@employee.Designation</td>
                    <td>@employee.BaseSalary.ToString("C")</td>
                    <td><span class="badge @(employee.Status == "Active" ? "bg-success" : "bg-secondary")">@employee.Status</span></td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                        <form asp-action="Delete" asp-route-id="@employee.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure?')">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>