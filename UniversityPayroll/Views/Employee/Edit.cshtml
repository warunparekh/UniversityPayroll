@model UniversityPayroll.Models.Employee
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Edit Employee";
}
<h2>Edit Employee</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="EmployeeCode" class="form-label">Code</label>
        <input asp-for="EmployeeCode" class="form-control" required />
    </div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="mb-3">
        <label asp-for="Designation" class="form-label">Designation</label>
        <select asp-for="Designation" asp-items="@(new SelectList(UniversityPayroll.Models.Designations.All, Model.Designation))" class="form-select" required>
            <option value="">-- select --</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="TaxSlabId" class="form-label">Tax Slab</label>
        <select asp-for="TaxSlabId" asp-items="ViewBag.TaxSlabs" class="form-select">
            <option value="">-- Select Tax Slab --</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="BaseSalary" class="form-label">Base Salary</label>
        <input asp-for="BaseSalary" class="form-control" type="number" step="0.01" />
    </div>
    <div class="mb-3">
        <label asp-for="Status" class="form-label">Status</label>
        <select asp-for="Status" class="form-select">
            <option>Active</option>
            <option>Inactive</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>