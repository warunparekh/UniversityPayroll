@model UniversityPayroll.Models.Employee

<div class="container mt-5 animate__animated animate__fadeIn">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-dark text-center">
                    <h2>Edit Employee</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        @if (ViewBag.Errors != null)
                        {
                            <div class="alert alert-danger">
                                <ul>
                                    @foreach (var error in ViewBag.Errors)
                                    {
                                        <li>@error</li>
                                    }
                                </ul>
                            </div>
                        }
                        <div class="mb-3">
                            <label asp-for="EmployeeCode" class="form-label"></label>
                            <input asp-for="EmployeeCode" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Department" class="form-label"></label>
                            <input asp-for="Department" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="DateOfJoining" class="form-label"></label>
                            <input asp-for="DateOfJoining" type="date" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="BasicPay" class="form-label"></label>
                            <input asp-for="BasicPay" type="number" step="0.01" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="HraPercent" class="form-label"></label>
                            <input asp-for="HraPercent" type="number" step="0.01" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="DaPercent" class="form-label"></label>
                            <input asp-for="DaPercent" type="number" step="0.01" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label>Bank IFSC</label>
                            <input asp-for="BankAccount.IFSC" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label>Bank Account Number</label>
                            <input asp-for="BankAccount.AccountNumber" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <input asp-for="Status" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label>Admin privileges</label>
                            <input type="checkbox" name="isAdmin" value="true" @(ViewBag.IsAdmin ? "checked" : "") class="form-check-input ms-2" />
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary animate__animated animate__pulse">Save</button>
                            <a href="/Employee" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>