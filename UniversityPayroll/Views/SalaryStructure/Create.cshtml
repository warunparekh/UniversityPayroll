@model UniversityPayroll.Models.SalaryStructure
@using UniversityPayroll.Models
@{
    ViewData["Title"] = "New Salary Structure";
}
<h2>New Salary Structure</h2>
<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Designation" class="form-label">Designation</label>
        <select asp-for="Designation" asp-items="@(new SelectList(Designations.All))" class="form-select" required>
            <option value="">-- select --</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="Allowances.DaPercent" class="form-label">DA %</label>
        <input asp-for="Allowances.DaPercent" class="form-control" type="number" step="0.01" required />
    </div>
    <div class="mb-3">
        <label asp-for="Allowances.HraPercent" class="form-label">HRA %</label>
        <input asp-for="Allowances.HraPercent" class="form-control" type="number" step="0.01" required />
    </div>
    <div class="mb-3">
        <label asp-for="AnnualIncrementPercent" class="form-label">Annual Increment %</label>
        <input asp-for="AnnualIncrementPercent" class="form-control" type="number" step="0.01" required />
    </div>
    <fieldset class="border p-3 mb-3">
        <legend class="float-none w-auto">Provident Fund Rules</legend>
        <div class="mb-3">
            <label asp-for="Pf.EmployeePercent" class="form-label">Employee %</label>
            <input asp-for="Pf.EmployeePercent" class="form-control" type="number" step="0.01" required />
        </div>
        <div class="mb-3">
            <label asp-for="Pf.EmployerPercent" class="form-label">Employer %</label>
            <input asp-for="Pf.EmployerPercent" class="form-control" type="number" step="0.01" required />
        </div>
        <div class="mb-3">
            <label asp-for="Pf.EdliPercent" class="form-label">EDLI %</label>
            <input asp-for="Pf.EdliPercent" class="form-control" type="number" step="0.01" required />
        </div>
        <div class="mb-3">
            <label asp-for="Pf.PfWageCeiling" class="form-label">PF Ceiling</label>
            <input asp-for="Pf.PfWageCeiling" class="form-control" type="number" step="0.01" required />
        </div>
    </fieldset>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>