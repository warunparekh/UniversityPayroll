@model UniversityPayroll.Models.LeaveEntitlement
@{
    ViewData["Title"] = "Edit Leave Entitlement";
}
<h2>Edit Leave Entitlement</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Designation" class="form-label">Designation</label>
        <select asp-for="Designation" class="form-select" required>
            <option value="">-- Select --</option>
            @foreach (var d in (IEnumerable<dynamic>)ViewBag.Designations)
            {
                <option value="@d.Value" selected="@(Model.Designation == d.Value ? "selected" : null)">@d.Text</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label>Leave Types & Counts</label>
        <table class="table">
            <thead>
                <tr><th>Type</th><th>Count</th></tr>
            </thead>
            <tbody>
                @foreach (var kv in Model.Entitlements)
                {
                    <tr>
                        <td>
                            <input name="Entitlements[@kv.Key].Key" value="@kv.Key" class="form-control" readonly />
                        </td>
                        <td>
                            <input name="Entitlements[@kv.Key].Value" value="@kv.Value" class="form-control" type="number" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>