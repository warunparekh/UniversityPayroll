<!-- Views/TaxSlab/Edit.cshtml -->
@model UniversityPayroll.Models.TaxSlab
@{
    ViewData["Title"] = "Edit Tax Slab";
}
<h2>Edit Tax Slab</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="FinancialYear" class="form-label">Financial Year</label>
        <input asp-for="FinancialYear" class="form-control" required />
    </div>
    <div class="mb-3">
        <label asp-for="CessPercent" class="form-label">Cess %</label>
        <input asp-for="CessPercent" class="form-control" type="number" step="0.01" required />
    </div>
    <fieldset class="border p-3 mb-3">
        <legend class="float-none w-auto">Slabs (up to 4)</legend>
        <table class="table">
            <thead>
                <tr><th>From</th><th>To (blank = ∞)</th><th>Rate %</th></tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Slabs.Count; i++)
                {
                    <tr>
                        <td>
                            <input asp-for="Slabs[@i].From" class="form-control" type="number" step="0.01" />
                        </td>
                        <td>
                            <input asp-for="Slabs[@i].To" class="form-control" type="number" step="0.01" />
                        </td>
                        <td>
                            <input asp-for="Slabs[@i].Rate" class="form-control" type="number" step="0.01" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </fieldset>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
