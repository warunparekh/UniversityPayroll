@{
    ViewData["Title"] = "Dashboard";
}

<h1>Welcome to University Payroll</h1>

<div class="row">
    @if (User.IsInRole("Admin"))
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Manage Employees</h5>
                    <p class="card-text">Add, edit, or remove employee records.</p>
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-primary">Go</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Salary Structures</h5>
                    <p class="card-text">Define DA, HRA, PF rules per designation.</p>
                    <a asp-controller="SalaryStructure" asp-action="Index" class="btn btn-primary">Go</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Tax Slabs</h5>
                    <p class="card-text">Manage annual tax slab definitions.</p>
                    <a asp-controller="TaxSlab" asp-action="Index" class="btn btn-primary">Go</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Run Payroll</h5>
                    <p class="card-text">Generate payslips for all employees.</p>
                    <a asp-controller="Admin" asp-action="RunPayroll" class="btn btn-primary">Go</a>
                </div>
            </div>
        </div>
    }
    @if (User.IsInRole("User") || User.IsInRole("Admin"))
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">My Leaves</h5>
                    <p class="card-text">Apply for leave & view status.</p>
                    <a asp-controller="Leave" asp-action="Index" class="btn btn-primary">Go</a>
                </div>
            </div>
        </div>
    }
</div>
